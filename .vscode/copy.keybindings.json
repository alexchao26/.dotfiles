// ~/Library/Application\ Support/Code/User/keybindings.json
[
  {
    // switch tabs like browser
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor",
  },
  {
    // switch tabs like browser
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor",
  },
  {
    // navigate history like browser history
    "key": "cmd+[",
    "command": "workbench.action.navigateBack",
  },
  {
    // navigate history like browser history
    "key": "cmd+]",
    "command": "workbench.action.navigateForward"
  },
  {
    // source control view
    "key": "cmd+shift+G",
    "command": "workbench.view.scm"
  },
  {
    // show definition in tooltip
    "key": "alt+d",
    "command": "editor.action.showDefinitionPreviewHover"
  },
  {
    // overwrite degbugger shortcut, assign to "jump to definition"
    "key": "cmd+shift+d",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  {
    // overwrite degbugger shortcut, assign to "jump to definition"
    "key": "cmd+shift+d",
    "command": "-workbench.view.debug",
  },
  {
    // additional jump to definition shortcut
    "key": "shift+alt+d",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  { 
    // disable... I keep accidentally opening a terminal I don't need...
    "key": "shift+cmd+c",           
    "command": "-workbench.action.terminal.openNativeConsole",
    "when": "!terminalFocus" },
]